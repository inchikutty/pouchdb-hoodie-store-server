#!/usr/bin/env node

var startServer = require('../index.js')

var options = {
  port: 8000,
  path: process.cwd()
};

console.log( 'Welcome to pouchdb hoodie store server' );
startServer(options, function (error) {
  if (error) throw error;

  console.log('Access any static file at %s\\<file name> at http://localhost:%d/<file name>', options.path, options.port);
})