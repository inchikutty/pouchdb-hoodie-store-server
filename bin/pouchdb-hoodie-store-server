#!/usr/bin/env node

var startServer = require('../index.js')

var options = {
  port: 8000,
  path: process.cwd()
};

var dirSeparator = require('path').sep

console.log( 'Welcome to pouchdb hoodie store server' );

startServer(options, function (error) {

  if (error) throw error;
  console.log('Access any static file at %s'+ dirSeparator +'file_name at http://localhost:%d/file_name', options.path, options.port);

})